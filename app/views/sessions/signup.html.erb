
<h2>Please sign up using the form below:</h2>

<%= form_for :client, url: '/login' do |f| %>
  Username: <%= f.text_field :name, :placeholder => "name"  %></br>
  Email: <%= f.text_field :email, :placeholder => "email"  %></br>
  Password: <%= f.password_field :password, :placeholder => "password"  %></br>
  <!--Password Confirmation: <%= f.password_field :password_confirmation %>-->
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit "Submit" %>
<% end %>
